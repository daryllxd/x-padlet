{
  "name": "x-padlet",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev -p ${PORT:-3001}",
    "dev:https": "NODE_TLS_REJECT_UNAUTHORIZED=0 next dev --experimental-https --experimental-https-key ./certificates/key.pem --experimental-https-cert ./certificates/cert.pem -p ${PORT:-3001}",
    "server": "cd server && pnpm run dev -p ${PORT:-3002}",
    "server:https": "cd server && pnpm run dev --experimental-https",
    "build": "next build",
    "start": "next start",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "prepare": "husky",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,md}\""
  },
  "dependencies": {
    "@atlaskit/pragmatic-drag-and-drop": "^1.5.2",
    "@atlaskit/pragmatic-drag-and-drop-hitbox": "^1.0.3",
    "@aws-sdk/client-s3": "^3.782.0",
    "@aws-sdk/s3-request-presigner": "^3.782.0",
    "@hookform/resolvers": "^4.1.3",
    "@lexical/code": "^0.29.0",
    "@lexical/link": "^0.29.0",
    "@lexical/list": "^0.29.0",
    "@lexical/markdown": "^0.29.0",
    "@lexical/react": "^0.29.0",
    "@lexical/rich-text": "^0.29.0",
    "@lexical/text": "^0.29.0",
    "@mdx-js/loader": "^3.1.0",
    "@mdx-js/react": "^3.1.0",
    "@next/mdx": "^15.2.5",
    "@radix-ui/react-checkbox": "^1.1.4",
    "@radix-ui/react-context-menu": "^2.2.6",
    "@radix-ui/react-dialog": "^1.1.6",
    "@radix-ui/react-label": "^2.1.2",
    "@radix-ui/react-slot": "^1.1.2",
    "@supabase/supabase-js": "^2.49.4",
    "@tanstack/react-query": "^5.71.5",
    "@tanstack/react-query-devtools": "^5.71.5",
    "@types/mdx": "^2.0.13",
    "@types/socket.io-client": "^3.0.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "downshift": "^9.0.9",
    "lexical": "^0.29.0",
    "masonic": "^4.0.1",
    "next": "15.2.4",
    "next-mdx-remote": "^5.0.0",
    "next-themes": "^0.4.6",
    "pg": "^8.14.1",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-hook-form": "^7.55.0",
    "react-rough-notation": "^1.0.5",
    "react-use": "^17.6.0",
    "sharp": "^0.34.1",
    "socket.io-client": "^4.8.1",
    "sonner": "^2.0.3",
    "tailwind-merge": "^3.0.2",
    "tiny-invariant": "^1.3.3",
    "tw-animate-css": "^1.2.5",
    "zod": "^3.24.2"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@shadcn/ui": "^0.0.4",
    "@tailwindcss/postcss": "^4",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.1",
    "@types/multer": "^1.4.12",
    "@types/node": "^22.13.17",
    "@types/pg": "^8.11.11",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@types/socket.io": "^3.0.2",
    "@typescript-eslint/eslint-plugin": "^8.29.1",
    "@typescript-eslint/parser": "^8.29.1",
    "eslint": "^8.56.0",
    "eslint-config-next": "15.2.4",
    "eslint-plugin-unused-imports": "^4.1.4",
    "husky": "^9.1.7",
    "lint-staged": "^15.5.0",
    "lucide-react": "^0.485.0",
    "prettier": "^3.5.3",
    "prettier-plugin-sql": "^0.19.0",
    "prettier-plugin-tailwindcss": "^0.6.11",
    "socket.io": "^4.8.1",
    "supabase": "^2.20.12",
    "tailwindcss": "^4",
    "typescript": "^5"
  },
  "lint-staged": {
    "*.{ts,tsx,mdx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{md,sql}": [
      "prettier --write"
    ]
  }
}
