{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local"],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**"]
    },
    "web#build": {
      "dependsOn": ["^build"],
      "env": [
        "AWS_ACCESS_KEY_ID",
        "AWS_SECRET_ACCESS_KEY",
        "AWS_REGION",
        "AWS_BUCKET_NAME",
        "ALLOWED_DOMAINS",
        "ENABLE_EXPERIMENTAL_COREPACK"
      ],
      "inputs": [
        "apps/web/app/**",
        "apps/web/components/**",
        "apps/web/lib/**",
        "apps/web/styles/**",
        "apps/web/public/**",
        "apps/web/package.json",
        "apps/web/next.config.js",
        "apps/web/tsconfig.json",
        "apps/web/postcss.config.js",
        "apps/web/tailwind.config.js"
      ],
      "outputs": [
        "apps/web/.next/**",
        "!apps/web/.next/cache/**",
        "apps/web/.next/types/**",
        "apps/web/dist/**"
      ]
    },
    "lint": {
      "outputs": []
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "clean": {
      "cache": false
    },
    "test": {
      "dependsOn": ["build"],
      "outputs": ["coverage/**"],
      "inputs": ["src/**/*.tsx", "src/**/*.ts", "test/**/*.ts", "test/**/*.tsx"]
    },
    "storybook": {
      "cache": false,
      "persistent": true,
      "inputs": ["src/**/*.stories.tsx", "src/**/*.stories.ts", ".storybook/**"]
    },
    "build-storybook": {
      "dependsOn": ["^build"],
      "outputs": ["storybook-static/**"],
      "inputs": ["src/**/*.stories.tsx", "src/**/*.stories.ts", ".storybook/**"]
    }
  }
}
