{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local"],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**"]
    },
    "web#build": {
      "dependsOn": ["^build"],
      "inputs": [
        "app/**",
        "components/**",
        "lib/**",
        "styles/**",
        "public/**",
        "package.json",
        "next.config.js",
        "tsconfig.json",
        "postcss.config.js",
        "tailwind.config.js"
      ],
      "outputs": [".next/**", "!.next/cache/**", ".next/types/**", "dist/**"]
    },
    "lint": {
      "outputs": []
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "clean": {
      "cache": false
    },
    "test": {
      "dependsOn": ["build"],
      "outputs": ["coverage/**"],
      "inputs": ["src/**/*.tsx", "src/**/*.ts", "test/**/*.ts", "test/**/*.tsx"]
    },
    "storybook": {
      "cache": false,
      "persistent": true,
      "inputs": ["src/**/*.stories.tsx", "src/**/*.stories.ts", ".storybook/**"]
    },
    "build-storybook": {
      "dependsOn": ["^build"],
      "outputs": ["storybook-static/**"],
      "inputs": ["src/**/*.stories.tsx", "src/**/*.stories.ts", ".storybook/**"]
    }
  }
}
